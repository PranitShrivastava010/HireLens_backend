generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(uuid())
  email      String   @unique
  name       String
  isVerified Boolean  @default(false)
  createdAt  DateTime @default(now())

  applications JobApplication[]
}

model Otp {
  id        String   @id @default(uuid())
  email     String
  otp       String
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([email])
}

model Jobs {
  id               String   @id @default(uuid())
  providerJobId    String   @unique
  providerName     String
  title            String
  description      String
  employmentType   String
  isRemote         Boolean  @default(false)

  companyName      String
  companyLogo      String?
  companyWebsite   String?

  location         String
  city             String?
  state            String?
  country          String?

  applyUrl         String

  minSalary        Int?
  maxSalary        Int?
  salaryPeriod     String?

  postedAt         String
  postedAtUtc      DateTime?

  qualifications   String[]
  responsibilities String[]

  createdAt        DateTime @default(now())

  applications     JobApplication[]

  @@index([title])
  @@index([companyName])
  @@index([location])
}

model ApplicationStatus {
  id   String @id @default(uuid())
  key  String @unique
  name String

  applications JobApplication[]
}

model JobApplication {
  id            String   @id @default(uuid())
  userId        String
  jobId         String
  statusId      String

  interviewDate DateTime?
  appliedAt     DateTime @default(now())

  user   User   @relation(fields: [userId], references: [id])
  job    Jobs   @relation(fields: [jobId], references: [id])
  status ApplicationStatus @relation(fields: [statusId], references: [id])

  @@unique([userId, jobId])
}
