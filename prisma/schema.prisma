generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(uuid())
  email      String   @unique
  name       String
  password   String
  isVerified Boolean  @default(false)
  createdAt  DateTime @default(now())

  tokens     UserToken[]
  resume     Resume[]

  applications JobApplication[]
}

model Otp {
  id        String   @id @default(uuid())
  email     String
  otp       String
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([email])
}

model UserToken {
  id               String   @id @default(uuid())
  userId           String
  refreshToken     String   @unique
  expiresAt        DateTime
  createdAt        DateTime @default(now())

  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Jobs {
  id                     String   @id @default(uuid())

  providerJobId          String   @unique
  providerName           String

  title                  String
  description            String
  employmentType         String
  isRemote               Boolean  @default(false)

  companyName            String
  companyLogo            String?
  companyWebsite         String?

  location               String
  city                   String?
  state                  String?
  country                String?

  applyUrl               String

  minSalary              Int?
  maxSalary              Int?
  salaryPeriod           SalaryPeriod?

  minExperienceYears     Int?
  maxExperienceYears     Int?
  experienceRaw          String[] @db.Text

  qualifications         String[] @db.Text
  responsibilities       String[] @db.Text

  postedAt               String?
  postedAtUtc            DateTime?
  createdAt              DateTime @default(now())

  applications           JobApplication[]
  keyword                JobKeyword[]

  @@index([title])
  @@index([companyName])
  @@index([location])
  @@index([isRemote])
  @@index([postedAtUtc])
  @@index([minSalary])
  @@index([maxSalary])
  @@index([minExperienceYears])
  @@index([maxExperienceYears])
}

enum SalaryPeriod {
  HOUR
  MONTH
  YEAR
}


model ApplicationStatus {
  id    String @id @default(uuid())
  key   String @unique
  label String
  sortOrder   Int
  allowsDate  Boolean @default(false)

  createdAt DateTime @default(now())

  applications JobApplication[]
}

model JobApplication {
  id            String   @id @default(uuid())
  userId        String
  jobId         String
  statusId      String

  interviewDate DateTime?
  appliedAt     DateTime @default(now())

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user   User   @relation(fields: [userId], references: [id])
  job    Jobs   @relation(fields: [jobId], references: [id])
  status ApplicationStatus @relation(fields: [statusId], references: [id])

  @@unique([userId, jobId])
  @@index([statusId])
}

model JobKeyword {
  id              String   @id @default(uuid())
  jobId           String
  keyword          String
  score           Float

  createdAt       DateTime @default(now())

  job             Jobs @relation(fields: [jobId], references: [id])

  @@index([jobId])
  @@index([keyword])
}

model Resume {
  id              String @id @default(uuid())
  userId          String
  filePath        String

  createdAt       DateTime @default(now())

  user            User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}
